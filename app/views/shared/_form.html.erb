<div class="container">
  <%= simple_form_for @service do |f| %>
    <%= f.input :product_name, placeholder: "Add your product" %>
    <%= f.input :description, placeholder:  "Add your description"  %>
    <%= f.input :price, placeholder: "Add the price" %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, class:"btn btn-dark" %>
  <% end %>
</div>
