<h1 class="mt-5">What are you looking for today?</h1>

<div class="container column">
  <% @services.each do |service| %>
    <div class="m-5 card-product">
       <%= cl_image_tag service.photo.key, height: 450, width: 450, crop: :fill, class: "card-img-top " %>
      <div class="card-product-infos">
        <h2> <%= link_to  service.product_name, service_path(service), class:"text-decoration-none" %> </h2>
        <p> <%= service.description %> </p>
        <h6> <%= service.price %> </h6>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Upload service", new_service_path, class: "bn5" %>
