<div class="container m-5 d-flex justify-content-center">
  <div>
    <h1 class="mb-4">Reserve the Product</h1>
    <div class="row">
      <div class="col-6 justify-content-center">
        <div class="card-trip">
          <%= cl_image_tag @service.photo.key, height: 450, width: 450, crop: :fill, class: "card-img-top " %>
              <h2 class="mt-4"><%= @service.product_name %></h2>
          <div class="card-trip-infos">
            <div>
              <p><%= @service.description %></p>
              <p id="status"><%= @service.available %></p>
            </div>
            <h2 class="card-trip-pricing"><i class="fa-solid fa-dollar-sign"></i> <%= @service.price %></h2>
          </div>
        </div>
      </div>
      <div class="col-6 d-flex justify-content-center">
        <div class="col-12 p-4 card">
          <%= render 'shared/booking' %>
        </div>
      </div>
    </div>
  </div>
</div>
