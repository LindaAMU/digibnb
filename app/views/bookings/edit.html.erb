<div class="container m-5">
  <div class="mb-5">
    <h1>Edit your booking</h1>
  </div>
  <div class="row">
    <div class="col-6 justify-content-center">
      <div class="card-trip">
        <%= cl_image_tag @service.photo.key, height: 450, width: 450, crop: :fill, class: "card-img-top " %>
        <div class="card-trip-infos">
          <div>
            <h2><%= @service.product_name %></h2>
            <p><%= @service.description %></p>
            <p id="status"><%= @service.available %></p>
          </div>
          <h2 class="card-trip-pricing"><i class="fa-solid fa-dollar-sign"></i> <%= @service.price %></h2>
        </div>
      </div>
    </div>
    <div class="col-6 d-flex justify-content-center">
      <div class="col-12 p-4 card">
        <%= render 'shared/booking' %>
      </div>
    </div>
  </div>
</div>
