<div class="container d-flex justify-content-center">
  <div class="card-trip m-5 col-4">
    <%= cl_image_tag @booking.service.photo.key, height: 450, width: 450, crop: :fill, class: "card-img-top " %>
    <h2 class="mt-4"><%= @booking.service.product_name %></h2>
    <div class="card-trip-infos">
      <div class="col-8">
        <p>Fecha inicio: <%= @booking.start_date.to_date %></p>
        <p>Fecha final: <%= @booking.end_date.to_date %></p>
      </div>
      <div class="col-4">
        <h2 class="card-trip-pricing"><i class="fa-solid fa-dollar-sign"></i> <%= @booking.service.price %></h2>
      </div>
    </div>
  </div>
</div>

<%= link_to "Back to products", services_path, class:"bn5" %>
<%= link_to "Delete", booking_path, class:"bn5", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this product?" } %>
<%= link_to "Edit", edit_booking_path(@booking), class:"bn5" %>
